    <script>
        // Theme Management
        function toggleTheme() { 
            document.body.classList.toggle('dark-mode'); 
            localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light'); 
        }
        if(localStorage.getItem('theme') === 'dark') document.body.classList.add('dark-mode');

        // Modal Logic
        const modal = document.getElementById('feedbackModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalMsg = document.getElementById('modalMessage');
        const modalIcon = document.getElementById('modalIcon');
        const modalBox = modal.querySelector('.modal-box');
        const modalBtn = modal.querySelector('.modal-btn');

        function showModal(title, msg, type) {
            modalTitle.innerText = title;
            modalMsg.innerText = msg;
            modal.classList.add('active');
            
            if(type === 'success') {
                modalIcon.innerHTML = '<i class="fa-solid fa-circle-check" style="color: var(--teal);"></i>';
                modalTitle.style.color = 'var(--teal)';
                modalBox.style.borderTopColor = 'var(--teal)';
                modalBtn.style.backgroundColor = 'var(--teal)';
            } else {
                modalIcon.innerHTML = '<i class="fa-solid fa-circle-xmark" style="color: var(--orange);"></i>';
                modalTitle.style.color = 'var(--orange)';
                modalBox.style.borderTopColor = 'var(--orange)';
                modalBtn.style.backgroundColor = 'var(--orange)';
            }
        }

        function closeModal() {
            modal.classList.remove('active');
        }

        // Quiz Validation
        function finishGrain() {
            const radios = document.getElementsByName('q12'); 
            let val = ""; 
            for(const r of radios) if(r.checked) val = r.value;
            
            if(val === "correct") { 
                showModal("Excellent !", "Vous avez compris la nuance : le premier diamant sécurise la technologie avant d'attaquer le problème utilisateur (2ème diamant) et la solution (3ème diamant).", "success");
                
                setTimeout(() => {
                    const btn = document.querySelector('.modal-btn');
                    if(btn) {
                        btn.innerText = "Retour au Sommaire";
                        btn.onclick = function() { window.location.href = 'sommaire_module1.html'; };
                    }
                }, 100);
            } else if (val === "") { 
                alert("Veuillez sélectionner une réponse au quiz.");
            } else { 
                showModal("Pas tout à fait", "Le premier diamant est dédié à la 'Techno initiale' et sa maturation. La vente arrive bien plus tard.", "error");
            }
        }
    </script>
</body>
</html>
